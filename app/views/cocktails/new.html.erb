<!-- create a new cocktail we need a form -->
<div class="container">
  <div class="row justify-content-center" id="form">
    <div class="col-6">
      <h1>New Cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.submit "Add Cocktail", class: "btn btn-primary" %>
      <% end %>
       <%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

