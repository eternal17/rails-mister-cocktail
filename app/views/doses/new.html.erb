<h1>New Dose</h1>

<div class="container">
  <div class="row justify-content-center" id="form">
    <div class="col-6">
      <h1>New dose (ingredient/description)</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "Add Dose", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
